<div class="margen">
    <!-- Sidebar Holder -->
    <nav id="sidebar" class="nav-sidebar">
        <ul class="list-unstyled components slimescroll-id" id="accordion">
            <li class="active">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            <a>Unidades</a>
                        </div>
                    </div>
                </div>
                {{#each data}}
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a data-toggle="collapse" href="#{{NombreUnidad}}"><i
                                    class="ti-pencil m-r-10"></i>{{NombreUnidad}}</a>
                        </div>
                        <div id="{{NombreUnidad}}" class="panel-collapse collapse">
                            <ul class="list-group">
                                {{#each respuestas}}
                                <li><a href="/clase/viewclase/{{idSup}}/{{id}}"><i
                                            class="ti-clip m-r-10"></i>{{respuesta}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{#each evaluacion}}
                <a href="/clase/exam/{{idExamen}}" class="accordion-toggle wave-effect">
                    <i class="ti-check-box m-r-10">{{NombreExamen}}</i>
                </a>
                {{/each}}
            </li>
        </ul>
    </nav>
    <div class="page-content" style="margin: 1%; ">
        <div class="container content-area">
            <div class="row">
                <div class="panel">
                    <div class="banner text-center">
                        <div class="container">
                            <h1 class="logo-font">{{Nombre}}</h1>
                        </div>
                    </div>
                    {{#each multimedia}}
                    <div class="card">
                        <div class="card-header">
                            <p class="h4">{{NombreMultimedia}}</p>
                        </div>
                        <div class="card-body">
                            <p> {{DescripcionMultimedia}}
                                {{#ifCond TipoMultimedia_idTipoMultimedia '==' 1}}
                                <iframe width="100%" height="315" src="{{Direccion}}" frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                                {{/ifCond}}
                                {{#ifCond TipoMultimedia_idTipoMultimedia '==' 2}}
                                {{/ifCond}}
                                {{#ifCond TipoMultimedia_idTipoMultimedia '==' 4}}
                                {{/ifCond}}
                        </div>
                    </div>
                    {{else}}

                    <div class="card card-body">
                        Selecione un tema en <strong>Unidades</strong>, Si no aparece la tematica es por que no
                        existe contenido del Tema
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
