<div class="container content-area">
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="banner text-center">
          <div class="container">
            <h1 class="logo-font">Agregar Carrera</h1>
          </div>
        </div>
        <form action="/carrera/addcarrera" method="POST">
          <fieldset>
            <fieldset class="form-group">
              <input class="form-control form-control-lg" type="text" placeholder="TITULO DE LA CARRERA"
                name="NombreCurso" value={{NombreCurso}}>
            </fieldset>
            <fieldset class="form-group">
              <textarea class="form-control" rows="8" placeholder="DESCRIBE BREVEMENTE"
                name="DescripcionCurso">{{DescripcionCurso}}</textarea>
            </fieldset>
            <button class="btn btn-lg pull-xs-right btn-primary">
              Crear Carrera
            </button>

          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>