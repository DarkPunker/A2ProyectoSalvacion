<div class="container content-area">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="banner text-center">
                    <div class="container">
                        <h1 class="logo-font">Administrador de Carreras</h1>
                    </div>
                </div>
                <div class="container page text-center card-body">
                    <div class="row h-100">
                        {{#each links}}
                        <div class="card card-block col-sm-12 my-auto p-4">
                            <h2 class="header">{{NombreCurso}}</h2>
                            <div class="card">
                                <div class="card-stacked">
                                    <div class="card-content">
                                        <p class="card-text mb-3"> {{DescripcionCurso}} </p>
                                        <a href="/carrera/editcarrera/{{idCarrera}}"
                                            class="btn btn-secondary">Editar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="col-md-4 mx-auto">
                            <div class="card card-body text-center">
                                <p>No hay ninguna carrera creada </b>
                                    Para crear una presione el boton de nueva carrera
                                </p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <a href="/carrera/addcarrera" class="btn btn-success btn-lg  mb-3">Nueva Carrera</a>
            </div>
        </div>
    </div>
</div>