                    <input type="date" class="form-control" name="fechanacimiento" placeholder="fecha de nacimiento">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Genero</label>
                    <select class="custom-select" id="sexo" name="sexo">
