<div class="container content-area">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <form action="/admin/editUser/{{user.nombre}}" method="POST">
                    <fieldset>
                        <div class="media p-2">
                            <img src="https://placehold.it/200x200" class="mr-3" alt="UserImage">
                            <div class="media-body">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">Usuario: {{user.nombre}}</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">Numero de Identificacion: {{user.identificacion}}</p>
                                        <p class="card-text">Correo: {{user.correo}}</p>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Estado</label>
                                            <select class="custom-select" id="estado" name="estado">
                                                <option value="1">Activo</option>
                                                <option value="0">Inactivo</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Rol</label>
                                            <select class="custom-select" id="rol" name="rol">
                                                {{#each rol}}
                                                <option value={{idRol}}>{{NombreRol}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <button class="btn btn-success">
                                            Guardar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>